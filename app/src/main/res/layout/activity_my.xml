<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

  <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
    <Button
    android:layout_width="@dimen/zero"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="@string/button_1"
    android:id="@+id/button"
    android:onClick="onClick" />

  <Button
    android:layout_width="@dimen/zero"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="@string/button_2"
    android:id="@+id/button2"
    android:onClick="onClickAuthentication"/>
  </LinearLayout>

  <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

    <ImageView
      android:layout_width="@dimen/zero"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:id="@+id/imageView"/>

    <LinearLayout android:layout_width="@dimen/zero"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical">
      <TextView
        android:id="@+id/label_name"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/text_height"
        android:text="@string/label_name"
        android:textSize="@dimen/text_size"
        android:textIsSelectable="false"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/zero"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/zero"/>
      <TextView
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/text_height"
        android:text=""
        android:textSize="@dimen/text_size"
        android:textIsSelectable="false"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/zero"/>
      <TextView
        android:id="@+id/label_sex"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/text_height"
        android:text="@string/label_sex"
        android:textSize="@dimen/text_size"
        android:textIsSelectable="false"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/zero"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/zero"/>
      <TextView
        android:id="@+id/sex"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/text_height"
        android:text=""
        android:textSize="@dimen/text_size"
        android:textIsSelectable="false"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/zero"/>
      <TextView
        android:id="@+id/label_birth"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/text_height"
        android:text="@string/label_birth"
        android:textSize="@dimen/text_size"
        android:textIsSelectable="false"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/zero"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/zero"/>
      <TextView
        android:id="@+id/birth"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/text_height"
        android:text=""
        android:textSize="@dimen/text_size"
        android:textIsSelectable="false"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/zero"/>
      <TextView
        android:id="@+id/label_address"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/text_height"
        android:text="@string/label_address"
        android:textSize="@dimen/text_size"
        android:textIsSelectable="false"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/zero"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/zero"/>
      <TextView
        android:id="@+id/address"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/text_height"
        android:text=""
        android:textSize="@dimen/text_size"
        android:textIsSelectable="false"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/zero"/>
    </LinearLayout>
  </LinearLayout>

</LinearLayout>
